@using Kanban.ViewModels

@{
    ViewBag.Title = "Tareas";
}

@model ListarTareasViewModel

<div class="container">
    <div class="row">
        <div class="col">
            <table class="table caption-top">
                <caption>Mis Tareas</caption>
                <thead>
                    <tr>
                        <th>Tablero</th>
                        <th hidden>Id</th>
                        <th hidden>Id Tablero</th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Color</th>
                        <th hidden>Id Usuario</th>
                        <th>Estado</th>
                        <th>Usuario Asignado</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(TareaViewModel tarea in @Model.TareasPropiasVM)
                    {
                        <tr>
                            <td>@tarea.NombreTablero</td>
                            <td hidden>@tarea.Id</td>
                            <td hidden>@tarea.IdTablero</td>
                            <td>@tarea.Nombre</td>
                            <td>@tarea.Descripcion</td>
                            <td style="background-color: @tarea.Color" class="text-white">@tarea.Color</td>
                            <td hidden>@tarea.IdUsuarioAsignado</td>
                            <td>@tarea.Estado</td>
                            <td>@tarea.NombreUsuario</td>
                            <td><button type="button" class="btn btn-outline-modificar"><a class="btn-outline-modificar" asp-controller="Tarea" asp-action="ModificarTarea" asp-route-idTarea="@tarea.Id">Modificar</a></button></td>
                            <td><button type="button" class="btn btn-outline-eliminar"><a class="btn-outline-eliminar" asp-controller="Tarea" asp-action="EliminarTarea" asp-route-idTarea="@tarea.Id">Eliminar</a></button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col">
            <table class="table caption-top">
                <caption>Todas las tareas</caption>
                <thead>
                    <tr>
                        <th>Tablero</th>
                        <th hidden>Id</th>
                        <th hidden>Id Tablero</th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Color</th>
                        <th hidden>Id Usuario</th>
                        <th>Estado</th>
                        <th>Usuario Asignado</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(TareaViewModel tarea in @Model.TareasVM)
                    {
                        <tr>
                            <td>@tarea.NombreTablero</td>
                            <td hidden>@tarea.Id</td>
                            <td hidden>@tarea.IdTablero</td>
                            <td>@tarea.Nombre</td>
                            <td>@tarea.Descripcion</td>
                            <td style="background-color: @tarea.Color" class="text-white">@tarea.Color</td>
                            <td hidden>@tarea.IdUsuarioAsignado</td>
                            <td>@tarea.Estado</td>
                            <td>@tarea.NombreUsuario</td>
                            <td><button type="button" class="btn btn-outline-modificar"><a class="btn-outline-modificar" asp-controller="Tarea" asp-action="ModificarTarea" asp-route-idTarea="@tarea.Id" asp-route-idTablero="@tarea.IdTablero">Modificar</a></button></td>
                            <td><button type="button" class="btn btn-outline-eliminar"><a class="btn-outline-eliminar" asp-controller="Tarea" asp-action="EliminarTarea" asp-route-idTarea="@tarea.Id">Eliminar</a></button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
