@using Kanban.ViewModels

@{
    ViewBag.Title = "Eliminar Tarea";
}

@model TareaViewModel

<div class="container">
    <form asp-controller="Tarea" asp-action="DeleteTarea" class="row">
        <input asp-for="@Model.Id" value="@Model.Id" hidden>
        <div class="col-6">
            <label asp-for="@Model.Nombre" class="form-label">Nombre</label>
                <input asp-for="@Model.Nombre" value="@Model.Nombre" class="form-control">
        </div>
        <div class="col-6">
            <label asp-for="@Model.Descripcion" class="form-label">Descripcion</label>
                <input asp-for="@Model.Descripcion" value="@Model.Descripcion" class="form-control">
        </div>
        <div class="col-6">
            <label asp-for="@Model.Color" class="form-label">Color</label>
                <input asp-for="@Model.Color" value="@Model.Color" class="form-control">
        </div>
        <div class="col-6">
            <label asp-for="@Model.Estado" class="form-label">Estado</label>
                <input asp-for="@Model.Estado" value="@Model.Estado" class="form-control">
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-primary btn-lg">Eliminar Tarea</button>
        </div>
        <div class="col-6">
            <button type="button" class="btn btn-primary btn-lg"><a asp-controller="Tarea" asp-action="ListarTareas">Cancelar</a></button>
        </div>
    </form>
</div>