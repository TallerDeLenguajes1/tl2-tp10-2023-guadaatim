@using Kanban.ViewModels

@{
    ViewBag.Title = "Modificar Tarea";
    Layout = "~/Views/Shared/_LayoutOperador.cshtml";
}

@model ModificarTareaViewModel

<div class="container">
    <form asp-controller="Tarea" asp-action="UpdateTarea" class="row">
            <input asp-for="@Model.Id" value="@Model.Id" hidden>
            <input asp-for="@Model.IdTablero" value="@Model.IdTablero" hidden>
        <div class="col-6">
            <label asp-for="@Model.Nombre" class="form-label">Nombre</label>
                <input asp-for="@Model.Nombre" value="@Model.Nombre" class="form-control" readonly>
        </div>
        <div class="col-6">
            <label asp-for="@Model.Descripcion" class="form-label">Descripcion</label>
                <input asp-for="@Model.Descripcion" value="@Model.Descripcion" class="form-control" readonly>
        </div>
        <div class="col-6">
            <label asp-for="@Model.Color" class="form-label">Color</label>
                <input asp-for="@Model.Color" value="@Model.Color" class="form-control" readonly>    
        </div>
        <div class="col-6">
            <label asp-for="@Model.Estado" class="form-label">Estado</label>
            <select asp-for="@Model.Estado" class="form-select">
                <option value="0">Ideas</option>
                <option value="1">ToDo</option>
                <option value="2">Doing</option>
                <option value="3">Review</option>
                <option value="4">Done</option>
            </select>
        </div>
        <div class="col-6">
            <label asp-for="@Model.IdUsuarioAsignado" class="form-label">Asignar Usuario</label>
                <input asp-for="@Model.IdUsuarioAsignado" hidden>
                <select asp-for="@Model.IdUsuarioAsignado" class="form-select" disabled>
                    @foreach(var u in Model.Usuarios.UsuariosVM)
                    {
                        <option value="@u.Id" readonly>@u.NombreDeUsuario</option>
                    }
                </select>
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-primary btn-lg">Modificar Tarea</button>
        </div>
        <div class="col-6">
            <button type="button" class="btn btn-primary btn-lg"><a asp-controller="Tarea" asp-action="ListarTareas">Cancelar</a></button>
        </div>
    </form>
</div>


@section Scripts {<partial name="_ValidationScriptsPartial"/>}