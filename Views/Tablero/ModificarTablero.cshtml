@using Kanban.ViewModels

@{
    ViewBag.Title = "Modificar Tablero";
}

@model TableroViewModel

<div class="container">
    <form asp-controller="Tablero" asp-action="UpdateTablero" class="row">
        <input asp-for="@Model.Id" value="@Model.Id" hidden>
        <input asp-for="@Model.IdUsuarioPropietario" value="@Model.IdUsuarioPropietario" hidden>
        <div class="col-6">
            <label asp-for="@Model.Nombre" class="form-label">Nombre</label>
                <input asp-for="@Model.Nombre" value="@Model.Nombre" class="form-control">
        </div>
        <div class="col-6">
            <label asp-for="@Model.Descripcion" class="form-label">Descripcion</label>
                <input asp-for="@Model.Descripcion" value="@Model.Descripcion" class="form-control">
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-primary mt-3">Modificar Tablero</button>
        </div>
        <div class="col-6">
            <button type="button" class="btn btn-primary mt-3">
                <a asp-controller="Tablero" asp-action="ListarTableros">Cancelar</a>
            </button>
        </div>
    </form>
</div>

@section Scripts {<partial name="_ValidationScriptsPartial"/>}