@using Kanban.ViewModels

@model ListarTablerosViewModel

<p>TODOS LOS TABLEROS</p>
<table>
    <thead>
        <tr>
            <th hidden>Id</th>
            <th hidden>Id Usuario Propietario</th>
            <th>Nombre Usuario Propietario</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Modificar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var tablero in @Model.TablerosVM)
        {
            <td hidden>@tablero.Id</td>
            <td hidden>@tablero.IdUsuarioPropietario</td>
            <td>@tablero.NombreUsuario</td>
            <td>@tablero.Nombre</td>
            <td>@tablero.Descripcion</td>
        }
    </tbody>
</table>

<p>TABLEROS PROPIOS</p>

<p>TODOS LOS TABLEROS</p>
<table>
    <thead>
        <tr>
            <th hidden>Id</th>
            <th hidden>Id Usuario Propietario</th>
            <th>Nombre Usuario Propietario</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Modificar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var tablero in @Model.TablerosVM)
        {
            <td hidden>@tablero.Id</td>
            <td hidden>@tablero.IdUsuarioPropietario</td>
            <td>@tablero.NombreUsuario</td>
            <td>@tablero.Nombre</td>
            <td>@tablero.Descripcion</td>
            <td><a asp-controller="Tablero" asp-action="ModificarTablero" asp-route-idTablero="@tablero.Id">Modificar</a></td>
            <td><a asp-controller="Tablero" asp-action="EliminarTablero" asp-route-idTablero="@tablero.Id">Eliminar</a></td>
            <td><a asp-controller="Tarea" asp-action="AltaTarea" asp-route-idTablero="@tablero.Id">Agregar Tarea</a></td>
        }
    </tbody>
</table>