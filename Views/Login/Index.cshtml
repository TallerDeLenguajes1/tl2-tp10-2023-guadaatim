@using Kanban.ViewModels

@{
    ViewBag.Title = "Login";
}


@model LoginViewModel

<div class="container">
    <form class="form-signin" asp-controller="Login" asp-action="Login">
        <div class="row">
            <label asp-for="@Model.NombreDeUsuario" class="col-2 form-label">Nombre de usuario</label>
                <div class="col-5">
                    <input asp-for="@Model.NombreDeUsuario" class="form-control">
                    <span asp-validation-for="@Model.NombreDeUsuario" class="validation"></span>
                </div>
        </div>
        <div class="row mt-3">
            <label asp-for="@Model.Contrasenia" class="col-2 form-label">Contrase√±a</label>
                <div class="col-5">
                    <input asp-for="@Model.Contrasenia" type="password" class="form-control">
                    <span asp-validation-for="@Model.Contrasenia" class="validation"></span>
                </div>
        </div>
        <div class="col-2">
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-login mt-3">Iniciar sesion</button>
        </div>
    </form>
</div>


@section Scripts {<partial name="_ValidationScriptsPartial" />}