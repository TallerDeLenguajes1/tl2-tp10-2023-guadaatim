@using Kanban.ViewModels

@{
    ViewBag.Title = "Usuarios";
}

@model ListarUsuariosViewModel

<div class="container">
    <div class="row">
        <div class="col">
            <table class="table caption-top">
                <caption>Lista De Usuarios</caption>
                <thead>
                    <tr>
                        <th>Nombre de Usuario</th>
                        <th>Rol</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.UsuarioLoggeado.NombreDeUsuario</td>
                        <td>@Model.UsuarioLoggeado.Rol</td>
                        <td><button type="button" class="btn btn-outline-modificar"><a class="btn-outline-modificar" asp-controller="Usuario" asp-action="ModificarUsuario" asp-route-idUsuario="@Model.UsuarioLoggeado.Id">Modificar</a></button></td>
                        <td>No disponible</td>
                    </tr>
                    @foreach(UsuarioViewModel usuario in @Model.UsuariosVM)
                    {
                        <tr>
                            <td>@usuario.NombreDeUsuario</td>
                            <td>@usuario.Rol</td>
                            <td><button type="button" class="btn btn-outline-modificar"><a class="btn-outline-modificar" asp-controller="Usuario" asp-action="ModificarUsuario" asp-route-idUsuario="@usuario.Id">Modificar</a></button></td>
                            <td><button type="button" class="btn btn-outline-eliminar"><a class="btn-outline-eliminar" asp-controller="Usuario" asp-action="EliminarUsuario" asp-route-idUsuario="@usuario.Id">Eliminar</a></button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

