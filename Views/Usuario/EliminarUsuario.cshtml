@using Kanban.ViewModels

@{
    ViewBag.Title = "Eliminar Usuario";
    @if(Context.Session.GetString("Rol") == "Administrador")
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    } else 
    {
        Layout = "~/Views/Shared/_LayoutOperador.cshtml";
    }
}

@model UsuarioViewModel

<div class="container">
    <div class="row">
        <div class="col">
            <table class="table">
                <tr>
                    <td>@Model.NombreDeUsuario</td>
                    <td>
                        <button type="submit" class="btn btn-modificar mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal-@Model.Id">
                            Eliminar Usuario
                        </button>
                        <div class="modal fade" id="exampleModal-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel-@Model.Id" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel-@Model.Id">
                                            Â¿Esta seguro de eliminar a @Model.NombreDeUsuario?
                                        </h5>
                                    </div>
                                    <div class="modal-body">
                                        Si lo elimina, se borraran todos sus tableros y las tareas de los mismos.
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-modificar" data-bs-dismiss="modal">Cancelar</button>
                                        <button type="button" class="btn btn-modificar px-2">
                                            <a class="btn btn-modificar" asp-controller="Usuario" asp-action="DeleteUsuario" asp-route-idUsuario="@Model.Id">
                                                Eliminar
                                            </a>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-cancelar mt-3 mr-3">
                            <a class="btn-link" asp-controller="Usuario" asp-action="ListarUsuarios">Cancelar</a>
                        </button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>