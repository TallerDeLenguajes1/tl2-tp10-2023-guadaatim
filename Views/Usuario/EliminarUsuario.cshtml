@using Kanban.ViewModels

@{
    ViewBag.Title = "Eliminar Usuario";
}

@model UsuarioViewModel

<div class="container">
    <form asp-controller="Usuario" asp-action="DeleteUsuario" class="row">
        <input asp-for="@Model.Id" value="@Model.Id" hidden>
        <div class="col-6">
            <label asp-for="@Model.NombreDeUsuario" class="form-label">Nombre de usuario</label>
                <input asp-for="@Model.NombreDeUsuario" value="@Model.NombreDeUsuario" class="form-control">
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-primary btn-lg">Eliminar Usuario</button>
        </div>
        <div class="col-6">
            <button type="button" class="btn btn-primary btn-lg"><a asp-controller="Usuario" asp-action="ListarUsuarios">Cancelar</a></button>
        </div>
    </form>
</div>