@using Kanban.ViewModels

@{
    ViewBag.Title = "Modificar Usuario";
}

@model ModificarUsuarioViewModel

<h1>Modificar Usuario</h1>

@if(@Model.Error != null)
{
    <p>@Model.Error</p>
}

<div class="container">
    <form asp-controller="Usuario" asp-action="ModificarUsuario" class="row g-3">
        <div asp-validation-summary="ModelOnly"></div>
            <input asp-for="@Model.Id" value="@Model.Id" hidden>
        <div class="col-6">
            <label asp-for="@Model.NombreDeUsuario" class="form-label">Nombre de usuario</label>
                <input asp-for="@Model.NombreDeUsuario" value="@Model.NombreDeUsuario" class="form-control">
                <span asp-validation-for="@Model.NombreDeUsuario" class="validation"></span>
        </div>
        <div class="col-6">
            <label asp-for="@Model.Contrasenia" class="form-label">Contrase√±a</label>
                <input asp-for="@Model.Contrasenia" value="@Model.Contrasenia" class="form-control">
                <span asp-validation-for="@Model.Contrasenia" class="validation"></span>
        </div>
        <div class="col-6">
            <label asp-for="@Model.Rol" class="form-label">Rol</label>
                <select asp-for="@Model.Rol" class="form-select">
                    <option value="0">Administrador</option>
                    <option value="1">Operador</option>
                </select>
                <span asp-validation-for="@Model.Rol" class="validation"></span>
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-modificar mt-3">Modificar Usuario</button>
            <button type="button" class="btn btn-cancelar mt-3">
                <a class="btn-link" asp-controller="Usuario" asp-action="ListarUsuarios">Cancelar</a>
            </button>
        </div>
    </form>
</div>

@section Scripts {<partial name="_ValidationScriptsPartial"/>}