@using Kanban.ViewModels

@{
    ViewBag.Title = "Crear Usuario";
    @if(Context.Session.GetString("Rol") == "Administrador")
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    } else 
    {
        Layout = "~/Views/Shared/_LayoutOperador.cshtml";
    }
}

@model CrearUsuarioViewModel

<h1>Crear Usuario</h1>

@if(@Model.Error != null)
{
    <p>@Model.Error</p>
}

<div class="container">
    <form asp-controller="Usuario" asp-action="CrearUsuario" class="row g-3">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="col-6">
            <label asp-for="@Model.NombreDeUsuario" class="form-label">Nombre de usuario</label>
                <input asp-for="@Model.NombreDeUsuario" class="form-control">
                <span asp-validation-for="@Model.NombreDeUsuario" class="validation"></span>
        </div>
        <div class="col-6">
            <label asp-for="@Model.Contrasenia" class="form-label">Contrase√±a</label>
                <input asp-for="@Model.Contrasenia" class="form-control">
                <span asp-validation-for="@Model.Contrasenia" class="validation"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Rol" class="form-label">Rol</label>
            <select asp-for="@Model.Rol" class="form-select">
                <option value="0">Administrador</option>
                <option value="1">Operador</option>
            </select>
            <span asp-validation-for="@Model.Rol" class="validation"></span>
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-crear mt-3">Crear Usuario</button>
        </div>
    </form>
</div>

@section Scripts {<partial name="_ValidationScriptsPartial"/>}