@{
    ViewData["Title"] = "Inicio";
    @if(Context.Session.GetString("Rol") == "Administrador")
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    } else 
    {
        Layout = "~/Views/Shared/_LayoutOperador.cshtml";
    }
}

 <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
      <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal"><strong>Tablero Kanban</strong></h1>
        <p class="lead font-weight-normal">La mejor aplicacion para organizar proyectos!</p>
        <a class="btn btn-outline-inicio" asp-controller="Tablero" asp-action="AltaTablero">Empezar mi proyecto</a>
        <a class="btn btn-outline-inicio mt-3" asp-controller="Tablero" asp-action="ListarMisTableros">Ver mis proyectos</a>
      </div>
      <div class="product-device box-shadow d-none d-md-block"></div>
      <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
    </div>